generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  firstname String
  lastname  String
  userName  String?
  createdAt DateTime @default(now())
  clerkId   String   @unique
  avatar     String?
  stripeId  String?

  // group      Group[]
